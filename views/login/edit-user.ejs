 <% var pageTitle = user.username + " edit profile" %>
 <% var pageDescription = "Profile page for" + user.username + ". Update all information regarding your profile including username, first name, last name, email, image and description."%>
 <% var pageKeywords = "Username, Profile, Edit Profile page, Edit Account, Update, Profile information, User, First name, Last name" %>

 <% include ../partials/header %>






 <section id="profile" class="section section--profile">

 	<div class="profile">

 		<div class="wrapper">

 			<div class="profile__header">
 				<div class="profile__title heading">Hi <%= user.username %>!</div>
 				<% if(user.isAdmin) { %>
 				<div class="profile__role">Role: <span>Admin</span></div>
 				<% } else { %>
 				<div class="profile__role">Role: <span>User</span></div>
 				<% } %>
 				<div class="profile__status">


 					<div class="profile__online">
 						Status:
 						<% if(user.isOnline) {%>
 						<span class="profile__indicator online"></span><span class="profile__status">Online</span>
 						<% } %>
 						<% if(!user.isOnline) {%>
 						<span class="profile__indicator offline"></span><span class="profile__status">Offline</span>
 						<% } %>
 					</div>

 				</div>
 				<% if (user.isPublic) { %>
 				<div class="profile__visibility">Visibility: Public</div>
 				<% } else { %>
 				<div class="profile__visibility">Visibility: Private</div>
 				<% } %>
 			</div>

 			<% if(user.isPublic || currentUser && currentUser.isAdmin || currentUser && currentUser._id.equals(user._id)) { %>
 			<form action="/users/<%= user._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
 				<div class="profile__content">
 					<div class="profile__info">
 						<h3 class="heading__subtitle u-margin-bottom-small">Basic Info</h3>
 						<ul class="profile__info__items text">
 							<li class="profile__info__item">
 								<div class="profile__info__item__title">Username</div>

 								<div class="main-contact-form__form__group">
 									<input class="main-contact-form__form__input" type="text" name="user[username]"
 										value="<%= user.username %>" placeholder="Username">
 									<label class="main-contact-form__form__label">Your Username</label>
 								</div>
 							</li>
 							<li class="profile__info__item">
 								<div class="profile__info__item__title">First Name</div>
 								<div class="main-contact-form__form__group">
 									<input class="main-contact-form__form__input" type="text" name="user[firstName]"
 										value="<%= user.firstName %>" placeholder="First Name">
 									<label class="main-contact-form__form__label">Your First Name</label>
 								</div>
 							</li>
 							<li class="profile__info__item">
 								<div class="profile__info__item__title">Last Name</div>
 								<div class="main-contact-form__form__group">
 									<input class="main-contact-form__form__input" type="text" name="user[lastName]"
 										value="<%= user.lastName %>" placeholder="Last Name">
 									<label class="main-contact-form__form__label">Your Last Name</label>
 								</div>
 							</li>
 							<li class="profile__info__item">
 								<div class="profile__info__item__title">E-mail</div>
 								<div class="main-contact-form__form__group">
 									<input class="main-contact-form__form__input" type="email" name="user[email]"
 										value="<%= user.email %>" placeholder="Email">
 									<label class="main-contact-form__form__label">Your Email</label>
 								</div>
 							</li>

 							<li class="profile__info__item">
 								<div class="profile__info__item__title">Profile Visibility</div>
 								<% if(user.isPublic == true) { %>
 								<div class="register__radio__group">
 									<label class="main-contact-form__form__radio__container">Public
 										<input type="radio" checked name="user[isPublic]" value="true">
 										<span class="main-contact-form__form__radio__checkmark"></span>
 									</label>
 									<label class="main-contact-form__form__radio__container">Private
 										<input type="radio" name="user[isPublic]" value="false">
 										<span class="main-contact-form__form__radio__checkmark"></span>
 									</label>
 								</div>

 								<% } %>

 								<% if(user.isPublic == false) { %>
 								<div class="register__radio__group">
 									<label class="main-contact-form__form__radio__container">Public
 										<input type="radio" checked name="user[isPublic]" value="true">
 										<span class="main-contact-form__form__radio__checkmark"></span>
 									</label>
 									<label class="main-contact-form__form__radio__container">Private
 										<input type="radio" name="user[isPublic]" value="false">
 										<span class="main-contact-form__form__radio__checkmark"></span>
 									</label>
 								</div>
 								<% } %>
 							</li>
 						</ul>
 						<div class="profile__info__item__title text">Description</div>
 						<div class="main-contact-form__form__group2">
 							<textarea rows="5" class="main-contact-form__form__input" name="user[info]"
 								placeholder="Basic information about yourself."><%= user.info %></textarea>
 							<label class="main-contact-form__form__label">Basic information about yourself.</label>
 						</div>


 						<div class="register__main__upload__footer">
 							<button class="btn btn--main btn--full-width register__main__upload__btn">Edit
 								Profile</button>

 						</div>



 						<% if(currentUser && currentUser.isAdmin || currentUser && currentUser._id.equals(user._id)) { %>
 						<div class="profile__password">
 							<h2 class="heading__subtitle u-margin-bottom-small">Looking to change your password?</h2>
 							<a href="/reset" class="profile__password__button btn btn--main btn--small">Request a new
 								password</a>
 							<p class="text u-margin-top-small">Instructions will be sent to your email address for you
 								to
 								change your password. </p>
 						</div>
 						<% } %>




 					</div>
					 

 				</div>
				 
 			</form>



 			<% } else { %>
 			<div class="text"> This profile is set to private and user information is hidden</div>
 			<% } %>

 		</div>
 	</div>

 </section>








 <% include ../partials/footer %>