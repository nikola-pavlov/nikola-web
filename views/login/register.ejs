<% var pageTitle="Register new account | Nikola Pavlov" %>
	<% var pageDescription="Sign up page for Nikola Pavlov web page. Here you can register your new account." %>
		<% var pageKeywords="Nikola Pavlov, Login, Account, Register, Sign up, Design, Portfolio, Sign in" %>

			<% include ../partials/header %>

				<section class="section section--register-page">

					<div class="wrapper">

						<div class="register text">
							<form class="register__form" action="/register" method="POST" enctype="multipart/form-data">


								<div class="register__main">

									<h2 class="heading register__heading">Sign Up!</h2>

									<p class="register__main__info">Please fill out the fields below to sign up!</p>

									<div class="register__main__fields">

										<div class="main-contact-form__form__group">
											<input class="main-contact-form__form__input" type="text" name="username"
												placeholder="Username" required>
											<label class="main-contact-form__form__label">Your Username</label>
										</div>

										<div class="main-contact-form__form__group">
											<input class="main-contact-form__form__input" type="email" name="email"
												placeholder="Email" required>
											<label class="main-contact-form__form__label">Your Email</label>
										</div>

										<div class="main-contact-form__form__group">
											<input class="main-contact-form__form__input" type="text" name="firstName"
												placeholder="First Name">
											<label class="main-contact-form__form__label">Your First Name</label>
										</div>

										<div class="main-contact-form__form__group">
											<input class="main-contact-form__form__input" type="text" name="lastName"
												placeholder="Last Name">
											<label class="main-contact-form__form__label">Your Last Name</label>
										</div>

										<div class="main-contact-form__form__group">
											<input class="main-contact-form__form__input" type="password"
												name="password" placeholder="Password" required>
											<label class="main-contact-form__form__label">Your Password</label>
										</div>

										<div class="main-contact-form__form__group">
											<input class="main-contact-form__form__input" type="password" name="confirm"
												placeholder="Confirm Password" required>
											<label class="main-contact-form__form__label">Confirm Password</label>
										</div>

										<div class="register__radio__group">
											<label class="main-contact-form__form__radio__container">Public
												<input type="radio" checked name="user[isPublic]" value="true">
												<span class="main-contact-form__form__radio__checkmark"></span>
											</label>
											<label class="main-contact-form__form__radio__container">Private
												<input type="radio" name="user[isPublic]" value="false">
												<span class="main-contact-form__form__radio__checkmark"></span>
											</label>
										</div>
	
										<label class="main-contact-form__form__label register__radio__visibility">Profile
											Visibility
										</label>

										<div class="register__main__upload__footer">
											<button class="btn btn--main btn--full-width register__main__upload__btn">Sign
												Up</button>
		
										</div>

										<p class="register__main__upload__signup u-margin-top-xsmall">Already have an
											account? <span class="strong--color-one"><a href="/login">Log in
													here</a></span>
										</p>

										
									</div>

									

									

								</div>


								<div class="register__main__upload">
									<div class="register__main__upload__image"></div>

									<div class="main-contact-form__form__group register__main__upload__group">
										<input class="register__main__upload__image__input" type="file" id="image"
											name="image" accept="image/*">
										<label class="register__main__upload__image__label" for="image">Upload</label>
									</div>

									<p class="register__main__upload__text">Suggested aspect ratio is 1:1.</p>
									<p class="register__main__upload__text">Your image will be scaled and cropped to
										W:400px H:400px after signing up.</p>
									<p class="register__main__upload__text">The image you upload will be
										<strong>publicly</strong> availible in your profile.
									</p>

									

									
								</div>

								

							</form>
							
						</div>

					</div>

				</section>

				<% include ../partials/footer %>